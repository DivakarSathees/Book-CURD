@model List<Book>

<h2>Book List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Book ID</th>
            <th>Book_Name</th>
            <th>Author</th>
            <th>No_of_pages</th>
            <th>Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.id</td>
                <td>@book.Book_Name</td>
                <td>@book.Author</td>
                <td>@book.No_of_pages</td>
                <td>@book.Price</td>
                <td>
                <td>
                    <!-- <a asp-action="Details" asp-route-id="@book.id">Details</a> | -->
                    <a asp-action="Edit" asp-route-id="@book.id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@book.id">Delete</a>
                </td>
                
                </td>

            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Create New Book</a>
